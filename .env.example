# Real Estate Auction Video Generator - Environment Variables

# LLM API Key (required for script generation and PDF text extraction)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# TTS: Edge TTS (Microsoft) - FREE, no API key required!
# Naver TTS keys below are optional (not used by default)
# NAVER_CLIENT_ID=your_naver_client_id
# NAVER_CLIENT_SECRET=your_naver_client_secret

# Server Configuration (optional)
HOST=127.0.0.1
PORT=8000
DEBUG=True

# Video Settings
DEFAULT_WIDTH=1920
DEFAULT_HEIGHT=1080
DEFAULT_FPS=30

# Audio Settings
TTS_LANGUAGE=ko-KR

# Processing
MAX_CONCURRENT_JOBS=3
CACHE_ENABLED=True

# Channel/Brand Name for intro
CHANNEL_NAME=경매TV
